<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">





    <ImageView
        android:id="@+id/topic_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/topic_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Math"
        android:textSize="22sp"
        android:layout_alignLeft="@+id/topic_short_desc"
        android:layout_alignStart="@+id/topic_short_desc"
        android:layout_alignBottom="@+id/topic_icon"
        android:layout_alignRight="@+id/topic_short_desc"
        android:layout_alignEnd="@+id/topic_short_desc" />

    <TextView
        android:id="@+id/topic_short_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Math is Science"
        android:layout_alignTop="@+id/topic_title"
        android:layout_toRightOf="@+id/topic_icon"
        android:layout_toEndOf="@+id/topic_icon"
        android:layout_marginTop="33dp" />


</RelativeLayout>