<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.washington.ruokua.quizdroid" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name=".TopicList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuizDroidModel"
            android:label="@string/topic_front_page" >
        </activity>
        <activity
            android:name=".QuestionFragment"
            android:label="@string/title_activity_quiz_questions" >
        </activity>
        <activity
            android:name=".AnswerFragment"
            android:label="@string/title_activity_answer" >
        </activity>
    </application>

</manifest>
